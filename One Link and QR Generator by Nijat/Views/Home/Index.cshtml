@model URLS
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://kit.fontawesome.com/22a7375077.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/style.css">
    <link rel="shortcut icon" href="img/favicon.png">
    <title>NCT Link Generator</title>
</head>

<body>
    <div class="container">
        <section class="" id="Main">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="row">
                        <div id="leftArea" class="col-lg-5">
                            <div id="generatedLinkArea" class="col-12">
                                <input id="generatedLink" type="text" readonly value="@ViewBag.BaseUrl/@Model.Code" onclick="copyToClipBoard()">
                            </div>
                            <div id="qrArea" class="col-12">
                            </div>
                            <div class="col-12">
                                <a id="downloadBtn" class="btn btn-success">Download QR code</a>
                            </div>
                        </div>
                        <div id="rightArea" class="col-lg-7">
                            <div class="col-12 linkinputsarea">
                                <i class="fab fa-apple logos"></i>
                                <div class="maininput">
                                    <input asp-for="AppStore" id="AppleInput" placeholder="Paste App Store URL" type="text">
                                    <i style="display: none;" class="fas fa-check icon"></i>
                                    <i style="display: none;" class="fas fa-times icon"></i>
                                </div>

                            </div>
                            <div class="col-12 linkinputsarea">
                                <i class="fab fa-android androidlogo"></i>
                                <div class="maininput">
                                    <input asp-for="GooglePlay" id="GoogleInput" placeholder="Paste Google Play URL" type="text">
                                    <i style="display: none;" class="fas fa-check icon"></i>
                                    <i style="display: none;" class="fas fa-times icon"></i>
                                </div>
                            </div>
                            <div class="col-12 linkinputsarea">
                                <i class="fas fa-globe logos"></i>
                                <div class="maininput">
                                    <input asp-for="Web" id="WebInput" placeholder="Paste Website URL" type="text">
                                    <i style="display: none;" class="fas fa-check icon"></i>
                                    <i style="display: none;" class="fas fa-times icon"></i>
                                </div>
                            </div>
                            <!-- <div class="col-12">
                                <a class="btn btn-success">Lock!</a>
                            </div> -->
                            <input asp-for="AppStore" id="MainAppleInput"  type="hidden">
                            <input asp-for="GooglePlay" id="MainGoogleInput"  type="hidden">
                            <input asp-for="Web" id="MainWebInput" type="hidden">

                        </div>
                        <div class="col-12">
                            <p id="textarea">Created by <a href="https://github.com/Nicat13">Nijat</a> <3</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script type="text/javascript" src="js/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="js/qrcode.js"></script>
    <script src="js/FileSaver.js"></script>
    <script src="js/main.js"></script>
</body>

</html>
